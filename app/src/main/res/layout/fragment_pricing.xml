<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.itemlist.PricingFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/pbLoadData"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:theme="@style/CircularProgress"
            android:visibility="gone" />

    </RelativeLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginHorizontal="@dimen/_10sdp"
       >

       <androidx.appcompat.widget.AppCompatTextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_10sdp"
           android:fontFamily="@font/roboto_medium"
           android:text="Purchase Price*"
           android:textColor="@color/colorPrimary"
           android:textSize="@dimen/_13sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlUserName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_edittext"

                >

                <ImageView
                    android:id="@+id/ivOldPassword"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/rupee">

                </ImageView>

                <View
                    android:id="@+id/viewOldPassword"
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/ivOldPassword"
                    android:background="#6B6B6B" />

                <EditText
                    android:id="@+id/edtPurchasePrice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/viewOldPassword"
                    android:background="@null"
                    android:drawablePadding="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:hint="Purchase Price"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tvTaxInfoPurchase"
                    android:gravity="center_vertical"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Without Tax"
                    android:paddingHorizontal="@dimen/_2sdp"
                    android:ellipsize="end"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                    />


            </RelativeLayout>


        </RelativeLayout>


       <androidx.appcompat.widget.AppCompatTextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_10sdp"
           android:fontFamily="@font/roboto_medium"
           android:text="Sale Price*"
           android:textColor="@color/colorPrimary"
           android:textSize="@dimen/_13sdp" />


       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <RelativeLayout
               android:id="@+id/rlSalePrice"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_30sdp"
               android:layout_marginTop="@dimen/_5sdp"
               android:background="@drawable/bg_edittext"

               >

               <ImageView
                   android:id="@+id/ivOldPasswordSale"
                   android:layout_width="@dimen/_15sdp"
                   android:layout_height="@dimen/_15sdp"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:src="@drawable/rupee">

               </ImageView>

               <View
                   android:id="@+id/viewOldPasswordSale"
                   android:layout_width="1dp"
                   android:layout_height="35dp"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="@dimen/_5sdp"
                   android:layout_toRightOf="@+id/ivOldPasswordSale"
                   android:background="#6B6B6B" />

               <EditText
                   android:id="@+id/edtSalePrice"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_30sdp"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:layout_toRightOf="@+id/viewOldPasswordSale"
                   android:background="@null"
                   android:drawablePadding="@dimen/_2sdp"
                   android:gravity="center_vertical"
                   android:hint="Sale Price"
                   android:inputType="numberDecimal"
                   android:textColor="@color/black"
                   android:textColorHint="@color/black"
                   android:textSize="@dimen/_12sdp" />

               <TextView
                   android:id="@+id/tvTaxInfoSale"
                   android:gravity="center_vertical"
                   android:layout_width="@dimen/_100sdp"
                   android:layout_height="match_parent"
                   android:layout_alignParentRight="true"
                   android:fontFamily="@font/roboto_regular"
                   android:text="Without Tax"
                   android:paddingHorizontal="@dimen/_2sdp"
                   android:ellipsize="end"
                   android:textSize="@dimen/_12sdp"
                   android:textColor="@color/black"
                   android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                   />


           </RelativeLayout>


       </RelativeLayout>


       <androidx.appcompat.widget.AppCompatTextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_10sdp"
           android:fontFamily="@font/roboto_medium"
           android:text="MRP"
           android:textColor="@color/colorPrimary"
           android:textSize="@dimen/_13sdp" />


       <androidx.appcompat.widget.AppCompatEditText
           android:id="@+id/edtMRP"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_35sdp"
           android:layout_gravity="center"
           android:layout_marginTop="@dimen/_10sdp"
           android:background="@drawable/rectangle_grey"
           android:fontFamily="@font/roboto_regular"
           android:hint="MRP"
           android:imeOptions="actionNext"
           android:inputType="numberDecimal"
           android:maxLength="8"
           android:paddingStart="@dimen/_10sdp"
           android:textColor="@color/black"
           android:textColorHint="@color/black"
           android:textSize="@dimen/_12sdp"
           android:visibility="visible" />

       <androidx.appcompat.widget.AppCompatTextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_10sdp"
           android:fontFamily="@font/roboto_medium"
           android:text="Tax"
           android:textColor="@color/colorPrimary"
           android:textSize="@dimen/_13sdp" />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/_35sdp"
           android:layout_marginTop="@dimen/_8sdp"
           android:layout_toLeftOf="@+id/ivAddTax"
           android:background="@drawable/rectangle_grey"
           android:orientation="horizontal">

           <AutoCompleteTextView
               android:id="@+id/acTax"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginRight="@dimen/_5sdp"
               android:background="@android:color/transparent"
               android:clickable="false"
               android:focusable="false"
               android:hint="Tax"
               android:paddingStart="@dimen/_10sdp"
               android:textColor="@color/black"
               android:textColorHint="@color/black"
               android:textSize="@dimen/_12sdp"
               android:visibility="visible" />

           <ImageView
               android:id="@id/image"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:layout_marginEnd="@dimen/_5sdp"
               android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />
       </RelativeLayout>

          <ImageView
              android:id="@+id/ivAddTax"
              android:layout_width="@dimen/_25sdp"
              android:layout_height="@dimen/_25sdp"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginEnd="@dimen/_5sdp"
              android:background="@drawable/bg_add_cat"
              android:padding="@dimen/_3sdp"
              android:src="@drawable/ic_baseline_add_24"
              app:tint="@color/material_grey_700" />
      </RelativeLayout>


   </LinearLayout>

</FrameLayout>