<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mDrawerLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/colorPrimary"
            android:elevation="1dp"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:background="@drawable/bg_fundtransfers"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/custToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@color/transparent"
                    android:elevation="@dimen/_5sdp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivHamburgerBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_baseline_dehaze_24"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_vertical"
                            android:text="@string/app_name"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivProfileBtn"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:padding="@dimen/_3sdp"
                            android:src="@drawable/ic_baseline_account_circle_24" />


                    </RelativeLayout>

                </androidx.appcompat.widget.Toolbar>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPPBalance"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@id/custToolbar"
                    app:cardElevation="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <RelativeLayout
                                android:id="@+id/ll_PPBalance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/ic_bg_rectangle">

                                <pl.droidsonroids.gif.GifTextView
                                    android:id="@+id/ivScan"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_marginStart="@dimen/_30sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:background="@drawable/scan"
                                    android:backgroundTint="@color/transparent" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/ivScan"
                                    android:layout_marginStart="@dimen/_30sdp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:text="@string/your_qr_code"
                                    android:textColor="@color/black" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/my_wallet_balance"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12sdp" />

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <com.airbnb.lottie.LottieAnimationView
                                            android:id="@+id/ivWallet"
                                            android:layout_width="76dp"
                                            android:layout_height="@dimen/_80sdp"
                                            app:lottie_autoPlay="true"
                                            app:lottie_fileName="55607-flying-wallet-money.json"
                                            app:lottie_loop="true"
                                            app:lottie_speed="1" />

                                        <TextView
                                            android:id="@+id/tvWalletBalance"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="20dp"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:layout_toEndOf="@+id/ivWallet"
                                            android:text="@string/rupee_zero"
                                            android:textColor="@color/black"
                                            android:layout_centerVertical="true"
                                            android:textSize="@dimen/_12sdp" />

                                    </RelativeLayout>


                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>



                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <RelativeLayout
                    android:id="@+id/rl_banner"
                    android:layout_below="@id/cvPPBalance"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvsliderView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <com.smarteist.autoimageslider.SliderView
                            android:id="@+id/sliderView"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_centerInParent="true"
                            app:sliderAnimationDuration="600"
                            app:sliderAutoCycleDirection="right"
                            app:sliderIndicatorAnimationDuration="600"
                            app:sliderIndicatorEnabled="true"
                            app:sliderIndicatorGravity="center_horizontal|bottom"
                            app:sliderIndicatorMargin="15dp"
                            app:sliderIndicatorOrientation="horizontal"
                            app:sliderIndicatorPadding="3dp"
                            app:sliderIndicatorRadius="2dp"
                            app:sliderIndicatorSelectedColor="@color/colorMainLight"
                            app:sliderIndicatorUnselectedColor="#FFF"
                            app:sliderScrollTimeInSec="1" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvNews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cvsliderView"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="Add your daily news here to notify the client about
it  for better User experience"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvSendMoney"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/rl_banner"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:text="@string/transfer_money"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/ll_three"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:weightSum="4"
                            android:visibility="visible">

                            <LinearLayout
                                android:id="@+id/rl_requestmoney"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_weight="1">

                                <ImageView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:src="@drawable/salary"
                                    android:padding="@dimen/_3sdp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_30sdp"
                                    android:text="@string/request_nfunds"
                                    android:gravity="center"
                                    android:textColor="@color/black"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/rl_addmoneytowallet"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <ImageView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:src="@drawable/creditcard"
                                    android:padding="@dimen/_3sdp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_30sdp"
                                    android:text="@string/add_nmoney"
                                    android:gravity="center"
                                    android:textColor="@color/black"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/rl_transferMoney"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_weight="1">

                                <ImageView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:padding="@dimen/_3sdp"
                                    android:src="@drawable/donation"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_30sdp"
                                    android:text="@string/transfer_nfunds"
                                    android:textColor="@color/black"
                                    android:gravity="center"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/cvViewReport"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_weight="1">

                                <ImageView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:paddingLeft="@dimen/_3sdp"
                                    android:paddingRight="@dimen/_3sdp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:src="@drawable/reports"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_30sdp"
                                    android:text="@string/reports"
                                    android:gravity="center"
                                    android:textColor="@color/black"/>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvRecharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cvSendMoney"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/white"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvRechargeTAG"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:text="@string/recharge_and_pay_bil"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:id="@+id/ll_four"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:layout_below="@id/tvRechargeTAG"
                            android:weightSum="4">

                            <RelativeLayout
                                android:id="@+id/rl_mobileRecharge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/ivMobilePrepaid"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_centerHorizontal="true"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/smartphone" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_below="@+id/ivMobilePrepaid"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:padding="@dimen/_1sdp"
                                    android:text="@string/mobile"
                                    android:textAlignment="center"
                                    android:textColor="@color/black" />

                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/rl_dthRecharge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/ivDth"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_centerHorizontal="true"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/satellitedish" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_below="@+id/ivDth"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:padding="@dimen/_1sdp"
                                    android:text="@string/dth"
                                    android:textAlignment="center"
                                    android:textColor="@color/black" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_electricity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/ivElectricity"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_centerHorizontal="true"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/lightbulb" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_below="@+id/ivElectricity"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:padding="@dimen/_1sdp"
                                    android:text="@string/electricity"
                                    android:textAlignment="center"
                                    android:textColor="@color/black" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_lpggas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/ivGas"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_centerHorizontal="true"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/gas"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_below="@+id/ivGas"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:padding="@dimen/_1sdp"
                                    android:text="@string/cylinder"
                                    android:textAlignment="center"
                                    android:textColor="@color/black" />

                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll_four"
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="4"
                            android:visibility="gone">

                            <RelativeLayout
                                android:id="@+id/rl_landlineRecharge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/ivLandline"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_centerHorizontal="true"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/landline" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_below="@+id/ivLandline"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:padding="@dimen/_1sdp"
                                    android:text="@string/landline"
                                    android:textAlignment="center"
                                    android:textColor="@color/black" />


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/ivPipedGas"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_centerHorizontal="true"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/flames" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_below="@+id/ivPipedGas"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:padding="@dimen/_1sdp"
                                    android:text="@string/gas"
                                    android:textAlignment="center"
                                    android:textColor="@color/black" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_fasttag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/ivFasTag"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_centerHorizontal="true"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/tollroad" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_below="@+id/ivFasTag"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:padding="@dimen/_1sdp"
                                    android:text="@string/fastag"
                                    android:textAlignment="center"
                                    android:textColor="@color/black" />


                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_insurance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">


                                <ImageView
                                    android:id="@+id/ivInsurance"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_centerHorizontal="true"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/insurance"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_below="@+id/ivInsurance"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:padding="@dimen/_1sdp"
                                    android:text="@string/insurance"
                                    android:textAlignment="center"
                                    android:textColor="@color/black" />

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvBanking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@id/cvRecharge"
                    android:layout_marginBottom="@dimen/_15sdp"
                    app:cardElevation="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ic_banking_services">

                            <pl.droidsonroids.gif.GifTextView
                                android:id="@+id/ivBanking"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@drawable/banking_services" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ivBanking"
                                android:gravity="center"
                                android:text="@string/banking_services"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:id="@+id/ll_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/_4sdp"
                                android:weightSum="2">

                                <RelativeLayout
                                    android:id="@+id/rl_microatm"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:id="@+id/ivMicreo"
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="@dimen/_35sdp"
                                        android:layout_centerHorizontal="true"
                                        android:padding="@dimen/_1sdp"
                                        android:src="@drawable/ic_atm_machine" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_35sdp"
                                        android:layout_below="@+id/ivMicreo"
                                        android:layout_centerHorizontal="true"
                                        android:gravity="center"
                                        android:padding="@dimen/_1sdp"
                                        android:text="@string/micro_natm"
                                        android:textAlignment="center"
                                        android:textColor="@color/black" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/rl_dmt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:id="@+id/imgDmt"
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="@dimen/_35sdp"
                                        android:layout_centerHorizontal="true"
                                        android:padding="@dimen/_1sdp"
                                        android:src="@drawable/ic_money_transfer" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_35sdp"
                                        android:layout_below="@+id/imgDmt"
                                        android:layout_centerHorizontal="true"
                                        android:gravity="center"
                                        android:padding="@dimen/_1sdp"
                                        android:text="@string/dmt_npayment"
                                        android:textAlignment="center"
                                        android:textColor="@color/black" />

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
