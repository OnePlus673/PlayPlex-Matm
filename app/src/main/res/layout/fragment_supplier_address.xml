<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.partylist.SupplierAddressFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/str_billing_address"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_13sdp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtBillingAddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/rectangle_grey"
            android:fontFamily="@font/roboto_regular"
            android:gravity="start"
            android:hint="@string/str_billing_address"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:maxLength="150"
            android:maxLines="4"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_12sdp"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/str_address"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_13sdp" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtAddressFrag"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rectangle_grey"
            android:fontFamily="@font/roboto_regular"
            android:gravity="start"
            android:hint="@string/str_address"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:maxLength="150"
            android:maxLines="4"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_12sdp"
            android:visibility="visible" />

    </LinearLayout>


</FrameLayout>