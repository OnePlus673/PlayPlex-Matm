<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.fragments.HomeFragment">


   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <ProgressBar
          android:id="@+id/progress_bar"
          style="?android:attr/progressBarStyle"
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_width="@dimen/_40sdp"
          android:layout_height="@dimen/_40sdp"
          android:layout_centerInParent="true"
          android:indeterminateTint="@color/colorPrimary"
          android:elevation="1dp"
          android:visibility="gone"/>



         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             >

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/mSwipeRefresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_8sdp">

               <ScrollView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   >
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvTodaySale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    app:cardElevation="@dimen/_5sdp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       >
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:weightSum="2">

                         <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="vertical"
                             android:background="@drawable/bg_purple"
                             android:layout_weight="1"
                             >
                            <TextView
                                android:id="@+id/tvWalletBalanceTag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:gravity="left"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_below="@+id/cvTodaySale"
                                android:text="Wallet Balance"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp" />
                            <TextView
                                android:id="@+id/tvWalletBalance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:gravity="left"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_below="@+id/cvTodaySale"
                                android:text="\u20B9 0"
                                android:textStyle="bold"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp" />


                         </LinearLayout>

                         <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="vertical"
                             android:background="@drawable/bg_purple"
                             android:layout_weight="1"
                             >
                            <TextView
                                android:id="@+id/tvTodaySaleTag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:gravity="left"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_below="@+id/cvTodaySale"
                                android:text="Today Sale"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp" />
                            <TextView
                                android:id="@+id/tvTodaySale"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:gravity="left"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_below="@+id/cvTodaySale"
                                android:text="\u20B9 0"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp" />


                         </LinearLayout>



                      </LinearLayout>

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          >


                         <RelativeLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="@dimen/_2sdp"
                             android:layout_marginBottom="@dimen/_5sdp"
                             android:layout_weight="1"
                             android:visibility="gone"
                             >




                            <LinearLayout
                                android:id="@id/ll_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/_4sdp"
                                android:weightSum="2">

                               <RelativeLayout
                                   android:id="@+id/rl_success"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="1">

                                  <ImageView
                                      android:id="@id/ivMicreo"
                                      android:layout_width="@dimen/_30sdp"
                                      android:layout_height="@dimen/_30sdp"
                                      android:layout_centerHorizontal="true"
                                      android:padding="@dimen/_1sdp"
                                      android:src="@drawable/success" />

                                  <TextView
                                      android:layout_width="match_parent"
                                      android:layout_height="@dimen/_30sdp"
                                      android:layout_below="@+id/ivMicreo"
                                      android:layout_centerHorizontal="true"
                                      android:gravity="center"
                                      android:padding="@dimen/_1sdp"
                                      android:text="Successful"
                                      android:textAlignment="center"
                                      android:textSize="@dimen/_10sdp"
                                      android:textColor="@color/black" />

                               </RelativeLayout>

                               <RelativeLayout
                                   android:id="@id/rl_dmt"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="1">

                                  <ImageView
                                      android:id="@id/imgDmt"
                                      android:layout_width="@dimen/_30sdp"
                                      android:layout_height="@dimen/_30sdp"
                                      android:layout_centerHorizontal="true"
                                      android:padding="@dimen/_1sdp"
                                      android:src="@drawable/fail"
                                      />

                                  <TextView
                                      android:layout_width="match_parent"
                                      android:layout_height="@dimen/_30sdp"
                                      android:layout_below="@+id/imgDmt"
                                      android:layout_centerHorizontal="true"
                                      android:gravity="center"
                                      android:padding="@dimen/_1sdp"
                                      android:text="Void"
                                      android:textAlignment="center"
                                      android:textSize="@dimen/_10sdp"
                                      android:textColor="@color/black" />

                               </RelativeLayout>




                            </LinearLayout>

                         </RelativeLayout>

                      </LinearLayout>
                   </LinearLayout>







                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/tvBankingServices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/cvTodaySale"
                    android:text="Payment Type"
                    android:textColor="@color/material_grey_800"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvBanking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/tvBankingServices"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    app:cardElevation="@dimen/_5sdp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:weightSum="1"
                       android:background="@drawable/bg_purple"
                       >


                      <RelativeLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/_2sdp"
                          android:layout_marginBottom="@dimen/_5sdp"
                          android:background="#F7F9FF"
                          android:layout_weight="1">




                         <LinearLayout
                             android:id="@+id/ll_1"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal"
                             android:padding="@dimen/_4sdp"
                             android:layout_marginTop="@dimen/_10sdp"
                             android:weightSum="3">

                            <RelativeLayout
                                android:id="@+id/rl_microatm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_image_white"
                                android:layout_marginHorizontal="@dimen/_8sdp"
                                android:layout_weight="1">

                               <ImageView
                                   android:id="@+id/ivMicreo"
                                   android:layout_width="@dimen/_35sdp"
                                   android:layout_height="@dimen/_35sdp"
                                   android:layout_centerHorizontal="true"
                                   android:padding="@dimen/_1sdp"
                                   android:layout_marginTop="@dimen/_8sdp"
                                   android:src="@drawable/ic_atm_machine" />

                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="@dimen/_35sdp"
                                   android:layout_below="@+id/ivMicreo"
                                   android:layout_centerHorizontal="true"
                                   android:gravity="center"
                                   android:padding="@dimen/_1sdp"
                                   android:text="@string/micro_natm"
                                   android:textAlignment="center"
                                   android:layout_marginTop="@dimen/_8sdp"
                                   android:textSize="@dimen/_12sdp"
                                   android:layout_marginBottom="@dimen/_8sdp"
                                   android:textColor="@color/black" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_aeps"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_8sdp"
                                android:background="@drawable/bg_image_white"

                                android:layout_weight="1">

                               <ImageView
                                   android:id="@+id/imgDmt"
                                   android:layout_width="@dimen/_35sdp"
                                   android:layout_height="@dimen/_35sdp"
                                   android:layout_centerHorizontal="true"
                                   android:padding="@dimen/_1sdp"
                                   android:src="@drawable/aeps"
                                   android:layout_marginTop="@dimen/_8sdp"
                                   android:layout_marginBottom="@dimen/_8sdp"
                                   app:tint="@color/black"/>

                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="@dimen/_35sdp"
                                   android:layout_below="@+id/imgDmt"
                                   android:layout_centerHorizontal="true"
                                   android:gravity="center"
                                   android:padding="@dimen/_1sdp"
                                   android:text="AEPS"
                                   android:textAlignment="center"
                                   android:textSize="@dimen/_12sdp"
                                   android:textColor="@color/black"
                                   android:layout_marginBottom="@dimen/_8sdp"
                                   />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_pos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_8sdp"
                                android:background="@drawable/bg_image_white"
                                android:layout_weight="1">

                               <ImageView
                                   android:id="@+id/imgFlight"
                                   android:layout_width="@dimen/_35sdp"
                                   android:layout_height="@dimen/_35sdp"
                                   android:layout_centerHorizontal="true"
                                   android:layout_marginTop="@dimen/_8sdp"
                                   android:src="@drawable/pos_terminal" />

                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="@dimen/_35sdp"
                                   android:layout_below="@+id/imgFlight"
                                   android:layout_centerHorizontal="true"
                                   android:layout_marginStart="@dimen/_8sdp"
                                   android:layout_marginTop="@dimen/_8sdp"
                                   android:layout_marginEnd="@dimen/_8sdp"
                                   android:layout_marginBottom="@dimen/_8sdp"
                                   android:gravity="center"
                                   android:padding="@dimen/_1sdp"
                                   android:text="POS"

                                   android:textAlignment="center"
                                   android:textColor="@color/black"
                                   android:textSize="@dimen/_12sdp" />

                            </RelativeLayout>




                         </LinearLayout>

                         <LinearLayout
                             android:id="@+id/llMicroAtm"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="vertical"
                             android:layout_below="@+id/ll_1"
                             android:background="@drawable/bg_tv"
                             android:layout_marginHorizontal="@dimen/_30sdp"
                             android:layout_marginVertical="@dimen/_10sdp"
                             android:visibility="gone"
                             >

                            <LinearLayout
                                android:id="@+id/ll_Matm_CW"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                               <ImageView
                                   android:layout_width="@dimen/_20sdp"
                                   android:layout_height="@dimen/_20sdp"
                                   android:src="@drawable/ic_cash_withdraw"
                                   android:layout_gravity="center_vertical"
                                   android:layout_marginLeft="@dimen/_10sdp"
                                   />

                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:text="Cash Withdrawl"
                                   android:textColor="@color/material_grey_700"
                                   android:textSize="@dimen/_14sdp"
                                   android:paddingVertical="@dimen/_5sdp"
                                   android:paddingLeft="@dimen/_10sdp"
                                   />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/material_grey_500"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                />

                            <LinearLayout
                                android:id="@+id/ll_Matm_BE"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                               <ImageView
                                   android:layout_width="@dimen/_20sdp"
                                   android:layout_height="@dimen/_20sdp"
                                   android:src="@drawable/ic_balance_enq"
                                   android:layout_gravity="center_vertical"
                                   android:layout_marginLeft="@dimen/_10sdp"
                                   />

                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:text="Balance Enquiry"
                                   android:textColor="@color/material_grey_700"
                                   android:textSize="@dimen/_14sdp"
                                   android:paddingVertical="@dimen/_5sdp"
                                   android:paddingLeft="@dimen/_10sdp"
                                   />

                            </LinearLayout>

                         </LinearLayout>

                         <LinearLayout
                             android:id="@+id/llAEPS"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="vertical"
                             android:layout_below="@+id/ll_1"
                             android:background="@drawable/bg_tv"
                             android:layout_marginHorizontal="@dimen/_30sdp"
                             android:layout_marginVertical="@dimen/_10sdp"
                             android:visibility="gone"
                             >

                            <LinearLayout
                                android:id="@+id/ll_AEPS_CW"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                               <ImageView
                                   android:layout_width="@dimen/_20sdp"
                                   android:layout_height="@dimen/_20sdp"
                                   android:src="@drawable/ic_cash_withdraw"
                                   android:layout_gravity="center_vertical"
                                   android:layout_marginLeft="@dimen/_10sdp"
                                   />

                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:text="AEPS Cash Withdrawl"
                                   android:textColor="@color/material_grey_700"
                                   android:textSize="@dimen/_14sdp"
                                   android:paddingVertical="@dimen/_5sdp"
                                   android:paddingLeft="@dimen/_10sdp"
                                   />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/material_grey_500"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                />

                            <LinearLayout
                                android:id="@+id/ll_AEPS_BE"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                               <ImageView
                                   android:layout_width="@dimen/_20sdp"
                                   android:layout_height="@dimen/_20sdp"
                                   android:src="@drawable/ic_balance_enq"
                                   android:layout_gravity="center_vertical"
                                   android:layout_marginLeft="@dimen/_10sdp"
                                   />

                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:text="AEPS Balance Enquiry"
                                   android:textColor="@color/material_grey_700"
                                   android:textSize="@dimen/_14sdp"
                                   android:paddingVertical="@dimen/_5sdp"
                                   android:paddingLeft="@dimen/_10sdp"
                                   />

                            </LinearLayout>

                         </LinearLayout>


                         <LinearLayout
                             android:id="@+id/llPOS"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="vertical"
                             android:layout_below="@+id/ll_1"
                             android:background="@drawable/bg_tv"
                             android:layout_marginHorizontal="@dimen/_30sdp"
                             android:layout_marginVertical="@dimen/_10sdp"
                             android:visibility="gone"
                             >

                            <LinearLayout
                                android:id="@+id/ll_POS_PURCHASE"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                               <ImageView
                                   android:layout_width="@dimen/_20sdp"
                                   android:layout_height="@dimen/_20sdp"
                                   android:src="@drawable/ic_cash_withdraw"
                                   android:layout_gravity="center_vertical"
                                   android:layout_marginLeft="@dimen/_10sdp"
                                   />

                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:text="Purchase"
                                   android:textColor="@color/material_grey_700"
                                   android:textSize="@dimen/_14sdp"
                                   android:paddingVertical="@dimen/_5sdp"
                                   android:paddingLeft="@dimen/_10sdp"
                                   />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/material_grey_500"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                />

                            <LinearLayout
                                android:id="@+id/ll_POS_VOID"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                               <ImageView
                                   android:layout_width="@dimen/_20sdp"
                                   android:layout_height="@dimen/_20sdp"
                                   android:src="@drawable/ic_balance_enq"
                                   android:layout_gravity="center_vertical"
                                   android:layout_marginLeft="@dimen/_10sdp"
                                   />

                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:text="Void"
                                   android:textColor="@color/material_grey_700"
                                   android:textSize="@dimen/_14sdp"
                                   android:paddingVertical="@dimen/_5sdp"
                                   android:paddingLeft="@dimen/_10sdp"
                                   />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/material_grey_500"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                />

                            <LinearLayout
                                android:id="@+id/ll_POS_CASH"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                               <ImageView
                                   android:layout_width="@dimen/_20sdp"
                                   android:layout_height="@dimen/_20sdp"
                                   android:src="@drawable/ic_cash_withdraw"
                                   android:layout_gravity="center_vertical"
                                   android:layout_marginLeft="@dimen/_10sdp"
                                   />

                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:text="Cash At POS"
                                   android:textColor="@color/material_grey_700"
                                   android:textSize="@dimen/_14sdp"
                                   android:paddingVertical="@dimen/_5sdp"
                                   android:paddingLeft="@dimen/_10sdp"
                                   />

                            </LinearLayout>

                         </LinearLayout>






                      </RelativeLayout>

                   </LinearLayout>

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/btnOnboardMerchant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Onboard Merchant"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/cvBanking"
                    android:background="@drawable/bg_button"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="gone"
                    />

             </RelativeLayout>
               </ScrollView>

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>





         </RelativeLayout>




   </RelativeLayout>


</FrameLayout>